<Application x:Class="HTrack.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color Resources -->
            <SolidColorBrush x:Key="CompletedBrush" Color="#4CAF50"/>
            <SolidColorBrush x:Key="IncompleteBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="PendingBrush" Color="#FFB74D"/>
            <SolidColorBrush x:Key="OutlineBrush" Color="#E0E0E0"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
            
            <!-- Day Box Style -->
            <Style x:Key="DayBoxStyle" TargetType="Border">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="Margin" Value="1"/>
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="{StaticResource IncompleteBrush}"/>
                <Style.Triggers>
                    <Trigger Property="Tag" Value="Completed">
                        <Setter Property="Background" Value="{StaticResource CompletedBrush}"/>
                    </Trigger>
                    <Trigger Property="Tag" Value="Pending">
                        <Setter Property="Background" Value="{StaticResource PendingBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application> 